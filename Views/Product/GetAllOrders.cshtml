@model IEnumerable<sampleapp.context.OrderTable>
@{
    ViewBag.Title = "GetAllOrders";
}

<h2>All Orders</h2>

<table class="table table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Product
        </th>
        <th>
            Status
        </th>
    </tr>

    @foreach (var order in Model)
    {
        <tr>
            <td>
                @order.UserTable.UserName
            </td>
            <td>
                @order.UserTable.UserAddress
            </td>
            <td>
                @order.Product_table.Product_Name
            </td>
            <td>
                @order.Status
            </td>
        </tr>
    }
</table>
@model sampleapp.context.OrderTable
@{
    ViewBag.Title = "ProductOrder";
    var productListsl = sampleapp.Models.Class1.GetProductNamesList();
    var usersListsl = sampleapp.Models.Class1.GetUserNameList();
    var productTypesl = sampleapp.Models.Class1.GetProductTypeList();
    var brandsSl = sampleapp.Models.Class1.GetProductBrandList();
}

<h2>ProductOrder</h2>
<style>
    .error {
        color: red;
    }
</style>
@using (Html.BeginForm("PlaceOrder", "Product", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @*@Html.ValidationMessageFor(m => m.ProductID"", new { @class = "error" })*@
            @Html.LabelFor(m => m.Product_table.Product_Type)
            @Html.DropDownListFor(m => m.Product_table.Product_Type, productTypesl, new { @class = "form-control" })
            @*@Html.TextBoxFor(m => m.Product_table.Product_Type)*@
        </div>
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.ProductID, "", new { @class = "error" })
            @Html.LabelFor(m => m.Product_table.Product_Name)
            @Html.DropDownListFor(m => m.Product_table.ID, productListsl, new { @class = "form-control" })
            @*@Html.TextBoxFor(m => m.Product_table.Product_Name)*@
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Product_table.Brand)
            @Html.DropDownListFor(m => m.Product_table.Brand, brandsSl, new { @class = "form-control" })
            @*@Html.TextBoxFor(m => m.Product_table.Brand)*@
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserTable.UserName)
            @Html.DropDownListFor(m => m.UserTable.ID, usersListsl, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="form-group">
            <button type="reset" class="btn btn-primary">Cancel</button>
        </div>
    </div>
}